{
    "version": "0.1.3",
    "description": "MetaphorJs selector engine (based on YASS)",

    "build": {

        "standalone": {
            "target": "dist/metaphorjs.select.js",
            "files": [
                ["src/func/select.js", {"as": "*"}]
            ],
            "options": {
                "wrap": true,
                "global": {
                    "expose": "MetaphorJs"
                }
            }
        },
        "standalone-min": {
            "extend": "standalone",
            "target": "dist/metaphorjs.select.min.js",
            "pipe": ["build", "compile", "write"]
        },

        "npm": {
            "target": "dist/metaphorjs.select.npm.js",
            "files": [
                ["src/func/select.js", {"as": "*"}]
            ],
            "options": {
                "wrap": {
                    "deferred": true,
                    "args": ["window"],
                    "return": "MetaphorJs.select",
                    "exports": true
                }
            }
        },

        "amd": {
            "target": "dist/metaphorjs.select.amd.js",
            "files": [
                ["src/func/select.js", {"as": "*"}]
            ],
            "options": {
                "amd": {
                    "name": "metaphorjs-select",
                    "return": "MetaphorJs.select"
                }
            }
            
        },
        "amd-min": {
            "extend": "amd",
            "target": "dist/metaphorjs.select.amd.min.js",
            "pipe": ["build", "compile", "write"]
        }

    }
}